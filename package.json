{
  "type": "module",
  "name": "r4g-faceit-stats",
  "version": "1.0.0",
  "description": "Faceit Stats Checker by R4G Duckyy",
  "main": "./src/main/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-builder": "^25.0.0-alpha.9"
